# 助手管理端中间件环境配置示例
# 复制此文件为 .env 并修改相应配置

# 应用配置
APP_NAME=助手管理端中间件
VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# CORS跨域配置（逗号分隔多个域名）
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080","http://127.0.0.1:3000","http://127.0.0.1:8080"]

# MySQL数据库配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password_here
MYSQL_DATABASE=assistant_management

# HIS推送接口配置
HIS_SERVICE_ID=CHKR01
HIS_SCENE_TYPE=EXAM001
HIS_EXTEND_SUB_ID=AI_REC

# 外部AI服务配置
AI_SERVICE_BASE_URL=http://210.12.11.251:27860
AI_SERVICE_ENDPOINT=/rimagai/checkitem/recommend_item_with_reason
AI_SERVICE_TIMEOUT=30
AI_DEFAULT_RECOMMEND_COUNT=3
AI_DEFAULT_SOURCE=lip

# WebSocket配置
WS_HEARTBEAT_INTERVAL=30
WS_HEARTBEAT_TIMEOUT=10
WS_MAX_RECONNECT_ATTEMPTS=5

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/assistant_management.log
LOG_RETENTION=30 days
LOG_ROTATION=100 MB

# JWT认证配置（预留）
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30